<resources>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#ccc</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GalaxyZooThemeToolbarDarkOverflow" parent="Theme.AppCompat.Light.NoActionBar">

    <item name="actionMenuTextColor">@color/graycolor</item>

</style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppThemeT" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppThemeT.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>
    <style name="AppTheme.NoActionBar">

        <item name="colorControlNormal">#333333</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="textview_login" parent="AppTheme">
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="Button_login" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/facebookColor</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="Button_comment" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#076b53</item>
        <item name="colorButtonNormal">#06896a</item>
        <item name="android:textSize">@color/white</item>
    </style>

    <style name="Button_register_facebook" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorButtonNormal">@color/facebookColor</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Button_register_google" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorButtonNormal">@color/googleColor</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>

    </style>

    <style name="Theme.UserDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">#333333</item>
    </style>
</resources>
