<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ristana.e_news.ui.activity.AccountActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                app:srcCompat="@drawable/account_circle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:tint="@color/white"
                android:id="@+id/imageView3" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/header_text_view_name"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="FUll NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="0dp"
        android:layout_below="@+id/relativeLayout_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout_password"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_line_buttom"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:padding="1dp"
                    android:layout_margin="7dp"
                    app:srcCompat="@drawable/ic_lock_black"
                    android:tint="@color/colorPrimary"
                    android:layout_width="30dp"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:text="Change your password"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/relativeLayout_edit"
                android:background="@drawable/border_line_buttom"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:padding="5dp"
                    android:layout_margin="7dp"
                    app:srcCompat="@drawable/ic_create"
                    android:tint="@color/colorPrimary"
                    android:layout_width="30dp"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:text="Edit your name"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout_logout"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_line_buttom"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:padding="5dp"
                    android:layout_margin="7dp"
                    app:srcCompat="@drawable/ic_power"
                    android:tint="@color/colorPrimary"
                    android:layout_width="30dp"
                    android:layout_height="45dp" />
                <TextView
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:text="Logout"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
            </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
