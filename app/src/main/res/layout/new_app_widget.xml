<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    android:padding="@dimen/widget_margin">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:background="#01b0f1"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginRight="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <TextView
                        android:id="@+id/weather_widget_text_view_city"
                        android:gravity="left|center"
                        android:textColor="#FFF"
                        android:text="-"
                        android:paddingLeft="6dp"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="80dp" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingRight="10dp"
                        android:layout_width="0dp"
                        android:layout_height="80dp">
                        <TextView
                            android:id="@+id/weather_widget_text_view_temp"
                            android:gravity="right|bottom"
                            android:text="-"
                            android:textSize="20sp"
                            android:textStyle="bold"

                            android:textColor="#FFF"
                            android:layout_weight="4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <TextView
                            android:id="@+id/weather_widget_text_view_main"
                            android:layout_weight="3"
                            android:gravity="right|top"
                            android:text="-"
                            android:textSize="16sp"
                            android:textColor="#FFF"
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />
                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:id="@+id/weather_widget_image_view_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_weather_26_p"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/weather_widget_text_view_day_1"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#333"
                    android:text="-"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/ic_weather_26_p"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/weather_widget_image_view_day_1" />
                <LinearLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#333"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_max_day_1" />
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#333"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_min_day_1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#333"
                    android:text="-"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/weather_widget_text_view_day_2" />
                <ImageView
                    android:src="@drawable/ic_weather_26_p"

                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/weather_widget_image_view_day_2" />
                <LinearLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#333"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_max_day_2" />
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#333"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_min_day_2" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#333"
                    android:text="-"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/weather_widget_text_view_day_3" />
                <ImageView
                    android:src="@drawable/ic_weather_26_p"

                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/weather_widget_image_view_day_3" />
                <LinearLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#333"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_max_day_3" />
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#333"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_min_day_3" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#333"
                    android:text="-"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/weather_widget_text_view_day_4" />
                <ImageView
                    android:src="@drawable/ic_weather_26_p"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/weather_widget_image_view_day_4" />
                <LinearLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#333"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_max_day_4" />
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#333"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_min_day_4" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#333"
                    android:text="-"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/weather_widget_text_view_day_5" />
                <ImageView
                    android:src="@drawable/ic_weather_26_p"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/weather_widget_image_view_day_5" />
                <LinearLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#333"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_max_day_5" />
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#333"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_min_day_5" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>