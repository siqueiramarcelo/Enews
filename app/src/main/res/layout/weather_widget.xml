<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="#6e000000"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    app:elevation="0dp"
    android:id="@+id/card_view_weather"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/weather_widget_image_view_maker"
                    android:padding="12dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_width="50dp"
                    app:srcCompat="@drawable/ic_maker_map"
                    android:tint="#ccc"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/weather_widget_text_view_city"
                        android:gravity="left|center"
                        android:textColor="#ccc"
                        android:text="--"
                        android:textSize="17sp"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="50dp" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:layout_width="0dp"
                        android:layout_height="50dp">
                        <TextView
                            android:id="@+id/weather_widget_text_view_temp"
                            android:gravity="right|bottom"
                            android:text="--Â° F"
                            android:textSize="18sp"
                            android:textColor="#ccc"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <TextView
                            android:id="@+id/weather_widget_text_view_main"
                            android:layout_weight="1"
                            android:gravity="right|top"
                            android:text="--"
                            android:textSize="12sp"
                            android:textColor="#ccc"
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/weather_widget_image_view_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_weather_26"
                    android:layout_alignParentRight="true"
                     />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linearlayout_bottom"
            android:paddingBottom="0dp"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/weather_widget_text_view_day_1"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#ccc"
                    android:text="-"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/ic_weather_26"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/weather_widget_image_view_day_1" />
                <LinearLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#ccc"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_max_day_1" />
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#ccc"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_min_day_1" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#ccc"
                    android:text="-"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/weather_widget_text_view_day_2" />
                <ImageView
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/ic_weather_26"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/weather_widget_image_view_day_2" />
                <LinearLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#ccc"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_max_day_2" />
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#ccc"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_min_day_2" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#ccc"
                    android:text="-"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/weather_widget_text_view_day_3" />
                <ImageView
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/ic_weather_26"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/weather_widget_image_view_day_3" />
                <LinearLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#ccc"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_max_day_3" />
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#ccc"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_min_day_3" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#ccc"
                    android:text="-"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/weather_widget_text_view_day_4" />
                <ImageView
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/ic_weather_26"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/weather_widget_image_view_day_4" />
                <LinearLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#ccc"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_max_day_4" />
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#ccc"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_min_day_4" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#ccc"
                    android:text="-"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/weather_widget_text_view_day_5" />
                <ImageView
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/ic_weather_26"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/weather_widget_image_view_day_5" />
                <LinearLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#ccc"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_max_day_5" />
                    <TextView
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#ccc"
                        android:text="-"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/weather_widget_text_view_min_day_5" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>