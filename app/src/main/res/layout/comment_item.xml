<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="visible"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/border_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_view_comment"
        app:srcCompat="@drawable/account_circle"
        android:layout_width="60dp"
        android:padding="10dp"
        android:layout_height="60dp" />
    <LinearLayout

        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_view_comment_name"
                android:paddingLeft="5dp"
                android:layout_weight="7"
                android:textStyle="bold"
                android:text="Hassan Boutannoura"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_view_comment_time"
                android:paddingRight="5dp"
                android:gravity="right"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10dp"
                android:layout_weight="3"
                android:textStyle="bold"
                android:text="9 Hours Ago"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/text_view_comment_content"
            android:padding="5dp"
            android:textSize="12dp"
            android:text="Good article i wich the good for you Good article i wich the good for you Good article i wich the good for you Good article i wich the good for you "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>